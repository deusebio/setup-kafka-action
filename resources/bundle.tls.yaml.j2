applications:
  kafka:
    channel: 3/edge
    charm: kafka
    num_units: {{ num_brokers }}
    revision: 177
    series: jammy
  zookeeper:
    channel: 3/edge
    charm: zookeeper
    num_units: {{ num_zk_servers }}
    revision: 137
    series: jammy
  tls:
    channel: latest/stable
    charm: self-signed-certificates
    num_units: 1
    options:
      ca-common-name: canonical
    revision: 155
    series: jammy
  user:
    channel: latest/stable
    charm: data-integrator
    num_units: 1
    revision: 41
    series: jammy
    options:
      consumer-group-prefix: cg
      extra-user-roles: {{ user_roles }}
      topic-name: {{ topic_name }}

description: A fast, secure and fault-tolerant Apache Kafka, supported by Apache ZooKeeper
issues: https://github.com/canonical/kafka-bundle/issues/new
name: kafka-bundle
relations:
- - kafka:zookeeper
  - zookeeper:zookeeper
- - kafka:certificates
  - tls:certificates
- - zookeeper:certificates
  - tls:certificates
- - user:kafka
  - kafka:kafka-client
series: jammy
source: https://github.com/canonical/kafka-bundle